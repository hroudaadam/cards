<Page x:Class="Cards.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cards"
      mc:Ignorable="d" 
      d:DesignHeight="290" d:DesignWidth="300"
      Title="Nápověda">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Label HorizontalAlignment="Center" Content="Kartičky" VerticalAlignment="Center" Grid.Row="0" 
               FontSize="24" />

        <TextBlock x:Name="helpTextBox" Grid.Row="1" TextWrapping="Wrap" Margin="10,0,10,0"/>

        <Button x:Name="homeButton" Content="Domů" Grid.Row="2" Height="35" Width="100" Click="HomeButton_Click" IsDefault="True"/>


    </Grid>
</Page>
